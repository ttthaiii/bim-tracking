'use client';
'use client';
import { useState } from 'react';
import Calendar from 'react-calendar';
import 'react-calendar/dist/Calendar.css';

export default function DailyReport() {
  const [date, setDate] = useState<any>(new Date());
  const [rows, setRows] = useState([{ id: 1, relateDrawing: '', time: '', workingHours: '', progress: '', note: '', file: null }]);

  const handleDateChange = (value: Value) => {
    setDate(value);
  };

  const addRow = () => {
    const newRow = {
      id: rows.length + 1,
      relateDrawing: '',
      time: '',
      workingHours: '',
      progress: '',
      note: '',
      file: null
    };
    setRows([...rows, newRow]);
  };

  const deleteRow = (id: number) => {
    setRows(rows.filter(row => row.id !== id));
  };

  return (
    <div className="min-h-screen bg-gray-50 p-6">
      <div className="max-w-7xl mx-auto bg-white rounded-lg shadow p-6">
        {/* Header Section */}
        <div className="flex justify-between mb-6">
          <div className="space-y-2">
            <div className="flex items-center space-x-4">
              <div className="w-10 h-10 bg-gray-200 rounded-full" />
              <input
                type="text"
                placeholder="รหัสพนักงาน"
                className="border rounded-md px-3 py-2 bg-gray-100"
              />
              <input
                type="text"
                placeholder="วันที่"
                className="border rounded-md px-3 py-2 bg-gray-100"
              />
            </div>
            <div className="flex flex-col space-y-2">
              <input
                type="text"
                placeholder="ชื่อโครงการ"
                className="border rounded-md px-3 py-2 w-64"
              />
              <input
                type="text"
                placeholder="สถานที่ปฏิบัติงาน"
                className="border rounded-md px-3 py-2 w-64"
              />
            </div>
          </div>
          
          {/* Calendar */}
          <div className="w-80">
            <Calendar
              onChange={handleDateChange}
              value={date}
              className="border rounded-lg shadow"
            />
          </div>
        </div>

        {/* Table Section */}
        <div className="mt-6 overflow-x-auto">
          <table className="min-w-full border">
            <thead>
              <tr className="bg-gray-100">
                <th className="border px-4 py-2 w-12">No</th>
                <th className="border px-4 py-2">Relate Drawing</th>
                <th className="border px-4 py-2 w-32">Time</th>
                <th className="border px-4 py-2 w-32">Working hours</th>
                <th className="border px-4 py-2 w-32">Progress</th>
                <th className="border px-4 py-2">Note</th>
                <th className="border px-4 py-2 w-32">Upload file</th>
                <th className="border px-4 py-2 w-24">Actions</th>
              </tr>
            </thead>
            <tbody>
              {rows.map((row) => (
                <tr key={row.id}>
                  <td className="border px-4 py-2 text-center">{row.id}</td>
                  <td className="border px-4 py-2">
                    <input type="text" className="w-full px-2 py-1" />
                  </td>
                  <td className="border px-4 py-2">
                    <input type="time" className="w-full px-2 py-1" />
                  </td>
                  <td className="border px-4 py-2">
                    <input type="text" className="w-full px-2 py-1" placeholder="0-100%" />
                  </td>
                  <td className="border px-4 py-2">
                    <input type="text" className="w-full px-2 py-1" />
                  </td>
                  <td className="border px-4 py-2">
                    <input type="text" className="w-full px-2 py-1" />
                  </td>
                  <td className="border px-4 py-2">
                    <input type="file" className="w-full" />
                  </td>
                  <td className="border px-4 py-2">
                    <button
                      onClick={() => deleteRow(row.id)}
                      className="bg-red-500 text-white px-2 py-1 rounded hover:bg-red-600"
                    >
                      Delete
                    </button>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>

        {/* Action Buttons */}
        <div className="mt-4 flex justify-between">
          <button
            onClick={addRow}
            className="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
          >
            Add Row
          </button>
          <button
            className="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600"
          >
            Submit
          </button>
        </div>
      </div>
    </div>
  );
}
}